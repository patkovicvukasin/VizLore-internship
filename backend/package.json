{
  "name": "mongo-api",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPatterns=\"\\.unit\\.test\\.js$\"",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPatterns=\"\\.integration\\.test\\.js$\"",
    "test": "npm run test:unit && npm run test:integration",
    "worker": "node src/jobs/csvWorker.js",
    "dev": "concurrently \"npm run start\" \"npm run worker\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "bullmq": "^5.8.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "multer": "^1.4.5-lts.2",
    "papaparse": "^5.5.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.1.4",
    "node-fetch": "^3.3.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.4.0",
    "wait-on": "^8.0.4"
  }
}
